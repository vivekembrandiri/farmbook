<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/profile_profilepic"
                android:layout_width="96dip"
                android:layout_height="96dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip" />

            <TextView
                android:id="@+id/profile_name_label"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@id/profile_profilepic"
                android:layout_marginLeft="10dip"
                android:text="NAME : "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/profile_profilepic"
                android:layout_toRightOf="@id/profile_name_label"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_location_label"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/profile_name_label"
                android:layout_below="@id/profile_name_label"
                android:layout_marginTop="10dip"
                android:text="LOCATION : "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_location"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/profile_name"
                android:layout_alignTop="@id/profile_location_label"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_phoneno_label"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/profile_name_label"
                android:layout_below="@id/profile_location_label"
                android:layout_marginTop="10dip"
                android:text="PHONE NO : "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_phoneno"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/profile_name"
                android:layout_alignTop="@id/profile_phoneno_label"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_friendlist_label"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/profile_name_label"
                android:layout_below="@id/profile_phoneno_label"
                android:layout_marginTop="30dip"
                android:text="FRIENDS : "
                android:textColor="@color/white" />

            <GridView
                android:id="@+id/profile_friendlist"
                android:layout_width="fill_parent"
                android:layout_height="200dip"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/profile_friendlist_label"
                android:layout_marginTop="10dip"
                android:columnWidth="96dip"
                android:gravity="center"
                android:horizontalSpacing="5dip"
                android:numColumns="auto_fit"
                android:stretchMode="spacingWidthUniform"
                android:verticalSpacing="5dip" />

            <TextView
                android:id="@+id/profile_posts_label"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/profile_name_label"
                android:layout_below="@id/profile_friendlist"
                android:layout_marginTop="10dip"
                android:text="POSTS : "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/profile_posts_label"
                android:layout_toRightOf="@id/profile_posts_label"
                android:text="0"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_comments_label"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/profile_posts_label"
                android:layout_marginLeft="70dip"
                android:layout_toRightOf="@id/profile_posts"
                android:text="COMMENTS : "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/profile_posts_label"
                android:layout_toRightOf="@id/profile_comments_label"
                android:text="0"
                android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>